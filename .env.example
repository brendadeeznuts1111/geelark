# -----------------------------------------------------------------------------
# üåç ENVIRONMENT & DEPLOYMENT SETTINGS
# -----------------------------------------------------------------------------
NODE_ENV=development
BUILD_TYPE=DEVELOPMENT
PLATFORM=android
ENVIRONMENT=development

# Build Configuration
BUN_TARGET=bun
BUN_MINIFY=false
BUN_TREE_SHAKING=true
BUN_SOURCEMAP=false
BUN_DEBUG=false

# Deployment Settings
DEPLOYMENT_REGION=us-west-2
DEPLOYMENT_ZONE=us-west-2a
CLUSTER_NAME=phone-management-cluster
NAMESPACE=default

# -----------------------------------------------------------------------------
# üîê SECURITY & ENCRYPTION SETTINGS
# -----------------------------------------------------------------------------
# Required API Keys
GEELARK_API_KEY=your_geelark_api_key_here
GEELARK_BASE_URL=https://api.geelark.com
GEELARK_API_VERSION=v1
GEELARK_TIMEOUT=10000

# Encryption Configuration
ENCRYPTION_KEY=your_256_bit_encryption_key_here
ENCRYPTION_ALGORITHM=AES-256-GCM
ENCRYPTION_IV_LENGTH=12
ENCRYPTION_TAG_LENGTH=16

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Certificate Management
TLS_CERT_PATH=/etc/ssl/certs/geelark.crt
TLS_KEY_PATH=/etc/ssl/private/geelark.key
TLS_CA_PATH=/etc/ssl/certs/ca.crt

# Security Settings
VALIDATION_MODE=strict
AUDIT_TRAIL_ENABLED=true
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
CORS_ENABLED=true

# -----------------------------------------------------------------------------
# üîå INTEGRATION SERVICE CONFIGURATIONS
# -----------------------------------------------------------------------------
# Proxy Service
PROXY_SERVICE_URL=http://proxy.company.com
PROXY_SERVICE_TIMEOUT=5000
PROXY_SERVICE_RETRIES=5
PROXY_SERVICE_FALLBACK=true

# Email Service
EMAIL_SERVICE_API_KEY=your_email_service_key
EMAIL_SERVICE_URL=https://api.emailservice.com
EMAIL_SERVICE_TIMEOUT=15000
EMAIL_SERVICE_RETRIES=2
EMAIL_SERVICE_FROM=noreply@company.com
EMAIL_SERVICE_FALLBACK=log

# SMS Service
SMS_SERVICE_API_KEY=your_sms_service_key
SMS_SERVICE_URL=https://api.smsservice.com
SMS_SERVICE_TIMEOUT=8000
SMS_SERVICE_RETRIES=3
SMS_SERVICE_FROM=COMPANY
SMS_SERVICE_FALLBACK=email

# Monitoring Services
DATADOG_API_KEY=your_datadog_key
DATADOG_APP_KEY=your_datadog_app_key
DATADOG_SITE=datadoghq.com

PROMETHEUS_GATEWAY_URL=http://prometheus-gateway:9091
PROMETHEUS_METRICS_PATH=/metrics

SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX=phone-management-logs
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

SPLUNK_HEC_URL=https://splunk.company.com:8088/services/collector/event
SPLUNK_HEC_TOKEN=your_splunk_hec_token
SPLUNK_INDEX=phone_management

CLOUDWATCH_REGION=us-west-2
CLOUDWATCH_LOG_GROUP=/aws/phone-management
CLOUDWATCH_LOG_STREAM=application-logs

