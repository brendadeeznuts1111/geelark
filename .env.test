# Dev HQ test fixture
# Use with: bun test --env-file .env.test

NODE_ENV=test
TEST_MODE=true
DEBUG=dev-hq:*

# Test-specific settings
TEST_TIMEOUT=10000
COVERAGE=true

# Mock service URLs (for integration tests)
MOCK_API_URL=http://localhost:3001
MOCK_DB_URL=sqlite::memory:

# Feature flags for testing
FEAT_MOCK_API=true
FEAT_EXTENDED_LOGGING=true

# Security test settings
SECURITY_TEST_MODE=true
DISABLE_AUTH=true
