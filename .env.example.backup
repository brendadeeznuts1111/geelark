# ===========================================
# Comprehensive Phone Management System
# Environment Configuration Template
# ===========================================

# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED API CONFIGURATIONS
# ===========================================

# GeeLark API Configuration (Required)
GEELARK_API_KEY=your_geelark_api_key_here
GEELARK_BASE_URL=https://api.geelark.com/v1
GEELARK_TIMEOUT=10000
GEELARK_RETRIES=3

# ===========================================
# OPTIONAL SERVICE INTEGRATIONS
# ===========================================

# Email Service Configuration
EMAIL_SERVICE_API_KEY=your_email_service_key
EMAIL_FROM=noreply@yourcompany.com
EMAIL_SMTP_HOST=smtp.yourcompany.com
EMAIL_SMTP_PORT=587

# SMS Service Configuration
SMS_SERVICE_API_KEY=your_sms_service_key
SMS_FROM=+1234567890
SMS_PROVIDER=twilio

# Proxy Service Configuration
PROXY_SERVICE_URL=http://proxy.yourcompany.com:8080
PROXY_USERNAME=proxy_user
PROXY_PASSWORD=proxy_password

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log Level (DEBUG, INFO, WARN, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Retention (days)
LOG_RETENTION_DAYS=30

# External Logging Services
EXTERNAL_LOGGING_ENABLED=true
ELASTICSEARCH_URL=http://elasticsearch:9200
SPLUNK_URL=https://splunk.yourcompany.com:8088
DATADOG_API_KEY=your_datadog_key
PROMETHEUS_PUSH_GATEWAY=http://prometheus-pushgateway:9091
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project
CLOUDWATCH_LOG_GROUP=/phone-management/logs

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Encryption Settings
ENCRYPTION_ENABLED=true
ENCRYPTION_KEY=your_256_bit_encryption_key_here_minimum_32_chars
ENCRYPTION_ALGORITHM=AES-256-GCM

# Validation Settings
VALIDATION_MODE=strict
VALIDATION_MAX_REQUEST_SIZE=10485760
VALIDATION_RATE_LIMIT=1000

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=3600
MFA_ENABLED=true

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CA_PATH=/path/to/ssl/ca.pem

# ===========================================
# PERFORMANCE & OPTIMIZATION
# ===========================================

# Batch Processing
BATCH_SIZE=100
BATCH_TIMEOUT=5000
BATCH_MAX_RETRIES=3

# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
REDIS_URL=redis://redis:6379

# Connection Pooling
DB_CONNECTION_POOL_SIZE=10
API_CONNECTION_POOL_SIZE=20

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SAMPLE_RATE=0.1
PERFORMANCE_METRICS_INTERVAL=60

# ===========================================
# MONITORING & ALERTING
# ===========================================

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Alert Configuration
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_RECIPIENTS=admin@yourcompany.com,devops@yourcompany.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key
ALERT_SMS_ENABLED=false

# Monitoring Thresholds
CPU_THRESHOLD_WARNING=70
CPU_THRESHOLD_CRITICAL=90
MEMORY_THRESHOLD_WARNING=80
MEMORY_THRESHOLD_CRITICAL=95
DISK_THRESHOLD_WARNING=85
DISK_THRESHOLD_CRITICAL=95

# ===========================================
# FEATURE FLAGS (Override Defaults)
# ===========================================

# Environment Selection (choose one)
# ENV_DEVELOPMENT=true
# ENV_PRODUCTION=true

# Feature Toggles
# FEAT_PREMIUM=true
# FEAT_AUTO_HEAL=true
# FEAT_ENCRYPTION=true
# FEAT_MOCK_API=false
# FEAT_EXTENDED_LOGGING=true
# FEAT_ADVANCED_MONITORING=true
# FEAT_BATCH_PROCESSING=true
# FEAT_VALIDATION_STRICT=true
# FEAT_NOTIFICATIONS=true

# Platform Selection
# PLATFORM_ANDROID=true
# (iOS is default when Android is false)

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/phone_management
DATABASE_SSL=true
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_MAX_CONNECTIONS=20

# MongoDB Configuration (if using)
MONGODB_URL=mongodb://localhost:27017/phone_management
MONGODB_SSL=true
MONGODB_REPLICA_SET=rs0

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Debug Mode
DEBUG_MODE=false
DEBUG_LOG_LEVEL=DEBUG

# Development Overrides
DEV_MOCK_EXTERNAL_SERVICES=false
DEV_DISABLE_SSL_VERIFICATION=false
DEV_ENABLE_CORS=true

# Hot Reload (for development)
HOT_RELOAD_ENABLED=true
HOT_RELOAD_WATCH_PATHS=src/**/*

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
SERVER_TIMEOUT=30000

# Load Balancer Health Check
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_RESPONSE=OK

# Graceful Shutdown
GRACEFUL_SHUTDOWN_TIMEOUT=30000
GRACEFUL_SHUTDOWN_SIGNALS=SIGTERM,SIGINT

# ===========================================
# METRICS & ANALYTICS
# ===========================================

# Application Metrics
METRICS_ENABLED=true
METRICS_PREFIX=phone_management
METRICS_INTERVAL=60

# Business Intelligence
BI_ENABLED=true
BI_DATABASE_URL=postgresql://bi_user:bi_pass@localhost:5432/bi_db
BI_RETENTION_DAYS=365

# ===========================================
# BACKUP & RECOVERY
# ===========================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/phone-management
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# Recovery Settings
RECOVERY_MAX_RETRIES=3
RECOVERY_TIMEOUT=3600000

# ===========================================
# COMPLIANCE & AUDIT
# ===========================================

# GDPR Compliance
GDPR_ENABLED=true
GDPR_DATA_RETENTION_DAYS=2555
GDPR_CONSENT_REQUIRED=true

# HIPAA Compliance (if applicable)
HIPAA_ENABLED=false
HIPAA_AUDIT_LOG_ENABLED=true

# SOX Compliance
SOX_ENABLED=false
SOX_AUDIT_TRAIL_ENABLED=true

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================

# Salesforce Integration
SALESFORCE_ENABLED=false
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_security_token

# HubSpot Integration
HUBSPOT_ENABLED=false
HUBSPOT_API_KEY=your_hubspot_api_key

# AWS Integration
AWS_ENABLED=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Azure Integration
AZURE_ENABLED=false
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_TENANT_ID=your_tenant_id

# Google Cloud Integration
GCP_ENABLED=false
GCP_PROJECT_ID=your_project_id
GCP_SERVICE_ACCOUNT_KEY_PATH=/path/to/service-account.json

# ===========================================
# EXPERIMENTAL FEATURES
# ===========================================

# AI/ML Features (Experimental)
AI_ENABLED=false
AI_MODEL_PATH=/path/to/models
AI_CONFIDENCE_THRESHOLD=0.8

# Blockchain Features (Experimental)
BLOCKCHAIN_ENABLED=false
BLOCKCHAIN_NETWORK=mainnet
BLOCKCHAIN_PRIVATE_KEY=your_private_key

# Quantum Computing (Research)
QUANTUM_ENABLED=false
QUANTUM_SIMULATOR_URL=http://quantum-simulator:8080

# ===========================================
# CUSTOM CONFIGURATION
# ===========================================

# Custom Plugin Directory
PLUGIN_DIR=./plugins
PLUGIN_AUTO_LOAD=true

# Custom Dashboard Configuration
DASHBOARD_THEME=dark
DASHBOARD_REFRESH_INTERVAL=5000
DASHBOARD_MAX_WIDGETS=20

# Custom Alert Rules
CUSTOM_ALERT_RULES_PATH=./config/alert-rules.json

# ===========================================
# EMERGENCY SETTINGS
# ===========================================

# Emergency Contact
EMERGENCY_CONTACT_EMAIL=emergency@yourcompany.com
EMERGENCY_CONTACT_PHONE=+1-800-EMERGENCY

# Emergency Mode
EMERGENCY_MODE_ENABLED=false
EMERGENCY_LOG_LEVEL=CRITICAL
EMERGENCY_DISABLE_EXTERNAL_SERVICES=false

# ===========================================
# SUPPORT & DIAGNOSTICS
# ===========================================

# Support Configuration
SUPPORT_TICKET_SYSTEM=jira
SUPPORT_API_KEY=your_support_api_key

# Diagnostics
DIAGNOSTICS_ENABLED=true
DIAGNOSTICS_LOG_PATH=./logs/diagnostics/
DIAGNOSTICS_MAX_FILE_SIZE=104857600
DIAGNOSTICS_MAX_FILES=10